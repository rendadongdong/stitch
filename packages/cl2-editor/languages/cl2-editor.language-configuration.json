{
  "brackets": [
    ["(", ")"],
    ["[", "]"],
    ["{", "}"]
  ],
  "autoClosingPairs": [
    ["(", ")"],
    ["[", "]"],
    ["{", "}"]
  ],
  "surroundingPairs": [
    ["(", ")"],
    ["[", "]"],
    ["{", "}"]
  ],
  "comments": {
    "lineComment": "//"
  },
  "folding": {},
  "onEnterRules": [
    {
      "beforeText": "^>.*",
      "action": {
        "indent": "none",
        "appendText": "\n\t"
      }
    },
    {
      "beforeText": "^:\\).*",
      "action": {
        "indent": "none",
        "appendText": "! "
      }
    },
    {
      "beforeText": "^!.*",
      "action": {
        "indent": "none",
        "appendText": "! "
      }
    },
    {
      "beforeText": "^-.*",
      "action": {
        "indent": "none",
        "appendText": "- "
      }
    },
    {
      "beforeText": "^\\?.*",
      "action": {
        "indent": "none",
        "appendText": "? "
      }
    },
    {
      "beforeText": "^\\+\\d+.*",
      "action": {
        "indent": "none",
        "appendText": "+"
      }
    }
  ]
}
